<div class="banner">
  <div class="banner-content">
    <h1>These are my cocktail recommendations </h1>
    <h2>Create your own </h2>
  </div>
</div>

<div class="headline">
  <h1 id="headline">Take a look at that:</h1>
</div>

  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <%= render "card", cocktail: cocktail %>
        </div>
      <% end %>
    </div>
  </div>

<div class="CTA">
  <p><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-success"%></p>
</div>


